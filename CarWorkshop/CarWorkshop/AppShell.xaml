<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarWorkshop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CarWorkshop"
    xmlns:views="clr-namespace:CarWorkshop.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="CarWorkshop">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        
        <ShellContent Title="Book en opgave" 
                      Icon="clipboard.png"
                      ContentTemplate="{DataTemplate views:BookingPage}"/>
        <ShellContent Title="Se kalender" 
                      Icon="calendar.png"
                      ContentTemplate="{DataTemplate views:CalenderPage}"/>
        <ShellContent Title="Opret faktura" 
                      Icon="page.png"
                      ContentTemplate="{DataTemplate views:InvoicePage}"/>

    </FlyoutItem>

</Shell>
